{
  "name": "v-perfect-signature",
  "description": "Perfect pressure-sensitive signature drawing for Vue 2 and 3",
  "keywords": [
    "vue",
    "signature",
    "pad",
    "freehand"
  ],
  "license": "MIT",
  "version": "1.1.1",
  "module": "dist/index.esm.js",
  "main": "dist/index.cjs.js",
  "unpkg": "dist/index.global.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "switch:2": "vue-demi-switch 2 vue2",
    "switch:3": "vue-demi-switch 3",
    "test": "jest",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "perfect-freehand": "^1.0.16",
    "vue-demi": "^0.12.1"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.4.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@vue/compiler-sfc": "^3.2.31",
    "@vue/test-utils": "2.0.0-rc.18",
    "canvas": "^2.8.0",
    "jest": "^27.0.6",
    "jest-canvas-mock": "^2.3.1",
    "rollup": "^2.52.8",
    "rollup-plugin-dts": "^3.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^27.0.4",
    "tslib": "^2.3.0",
    "typescript": "^4.2.3",
    "vue": "^3.2.31",
    "vue2": "npm:vue@2"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wobsoriano/v-perfect-signature.git"
  },
  "homepage": "https://github.com/wobsoriano/v-perfect-signature#readme",
  "prettier": {
    "singleQuote": true,
    "semi": true
  }
}
